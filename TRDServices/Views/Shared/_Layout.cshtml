@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TRD ServicesAdministrative | TRD Inc.</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/mdb.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/mdb.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    </environment>


    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
    <div class="row banner">
        <div class="col-xs-6">
            <a class="trdSocialMediaIcon" href="https://www.facebook.com/Thousand-Oaks-Research-Development-331585923566771/" target="_blank"><i class="fa fa-facebook"></i></a>             
            &nbsp;
            <a class="trdSocialMediaIcon" href="https://twitter.com/TO_RD" target="_blank"><i class="fa fa-twitter"></i></a> 
            &nbsp;
            <i class="fa fa-google-plus-official"></i> 
            &nbsp;
            <i class="fa fa-linkedin"></i> 
        </div>
        <div class="col-xs-6 text-right">
            <i class="fa fa-phone"></i> 1(951)905-5355
            <i class="fa fa-envelope"></i> info@trd-services.com
        </div>
    </div>
    <nav class="navbar navbar-inverse navbar-static-top trdNav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/images/trd/logo.png" height="90" alt="TRD Logo"/>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="dropdown @(ViewContext.RouteData.Values["Action"].ToString().Contains("Services") ? "active" : "")">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Services <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="ServicesAdministrative">Administrative</a>
                            </li>                            
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="ServicesRecruitment">Recruitment</a>
                            </li>                            
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="ServicesTaxPrep">Tax Preparation</a>
                            </li>

                        </ul>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contracts"  ? "active" : "")">
                        <a asp-area="" asp-controller="Home" asp-action="Contracts">Contracts</a>
                    </li>
                    <li class="dropdown @(ViewContext.RouteData.Values["Action"].ToString().Contains("About") ? "active" : "")">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">About <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="AboutContact">Contact TRD</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="AboutTerms">Terms Of Use</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="AboutPrivacy">Privacy Policy</a>
                            </li>

                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()                
    </div>
    
    <!--Footer-->
    <footer class="page-footer amber accent-3 center-on-small-only">

        <!--Footer Links-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-3"></div>                
                <!--First column-->
                <div class="col-xs-6 text-center">
                    <span class="copyright trdCopywrite">
                        <strong>
                            Thousand Oaks Research and Development, Inc. (TRD)<br>
                            3900 Market Street Suite 260<br>
                            Riverside, CA 92501 <br><br>

                        </strong>
                    </span>
                </div>
                <div class="col-xs-3"></div>                
            </div>
        </div>
        <!--/.Footer Links-->
        <!--Copyright-->
        <div class="footer-copyright">
            <div class="container-fluid trdCopywrite">
                © 2012-2017 TRD - All Rights Reserved.
            </div>
        </div>
        <!--/.Copyright-->

    </footer>
    <!--/.Footer-->    

<environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>       

@RenderSection("Scripts", required: false)
</body>
</html>
